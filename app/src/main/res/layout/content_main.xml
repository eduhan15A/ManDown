<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Sensores" />



    <!--   Linear Acceleration -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:min="1"
        android:progress="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Sensibility level" />

    <TextView
        android:id="@+id/lblSensibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="3" />

    <!--   Accelerometer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Acelerometro" />
    <TextView
        android:id="@+id/tvAccelerometerX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" />
    <TextView
        android:id="@+id/tvAccelerometerY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" />
    <TextView
        android:id="@+id/tvAccelerometerZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" />
    <TextView
        android:id="@+id/tvAccelerometerMovement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" />

    <!-- Motion Counter -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detecciones" />
    <TextView
        android:id="@+id/lblMotionCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />


    <!-- Time Counter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countdown" />
    <TextView
        android:id="@+id/lblCountDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

<!-- Mensaje Enviado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaje enviado" />
    <TextView
        android:id="@+id/lblMessageSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No" />
<EditText
    android:id="@+id/txbPhoneNumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="phone"
    android:text="4611989574"
    android:hint="Phone to send Message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Acceleracion Linear"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tvLinearAccelX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tvLinearAccelY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />
    <TextView
        android:id="@+id/tvLinearAccelZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />

    <!--   GRAVITY -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        android:text="Gravity" />
    <TextView
        android:id="@+id/tvGravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />
    <TextView
        android:id="@+id/tvGravityY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />
    <TextView
        android:id="@+id/tvGravityZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />


    <!--   Gyroscope -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        android:text="Gyroscope" />
    <TextView
        android:id="@+id/tvGyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />
    <TextView
        android:id="@+id/tvGyroscopeY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />
    <TextView
        android:id="@+id/tvGyroscopeZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />


    <!--   Rotation -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        android:text="Rotation" />
    <TextView
        android:id="@+id/tvRotationVector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />
    <TextView
        android:id="@+id/tvRotationVectorY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />
    <TextView
        android:id="@+id/tvRotationVectorZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />

    <!--   Step Counter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        android:text="Step Counter" />
    <TextView
        android:id="@+id/tvStepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="X" />


</LinearLayout>